@model DeleteItemVM

<form method="post" style="margin:30px auto; width:500px;">
    <div class="form-group">
        &nbsp;<label for="ID">ID</label>
        <input type="text" class="form-control" asp-for="ID" readonly>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        &nbsp;<label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" readonly>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        &nbsp;<label for="Status">Status</label>
        <input type="text" class="form-control" asp-for="Status" readonly>
        <span asp-validation-for="Status"></span>
    </div>

    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <button type="submit" class="btn btn-primary" asp-action="Index">Back to list</button>
    </div>

</form>